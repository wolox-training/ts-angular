.auth-container
  img.title-img(src='../../assets/wbooks_logo.svg' alt='wolox-logo')
  form.main-form(novalidate name='userForm')
    .form-group
      label.form-label {{'signUp.firstName' | translate}}
      input.form-input(type='text' name='firstName' ng-model='user.firstName' required)
      span.error(ng-show='userForm.firstName.$invalid && userForm.firstName.$touched') {{'signUp.requiredField' | translate}}
    .form-group
      label.form-label {{'signUp.lastName' | translate}}
      input.form-input(type='text' name='lastName' ng-model='user.lastName' required)
      span.error(ng-show='userForm.lastName.$invalid && userForm.lastName.$touched') {{'signUp.requiredField' | translate}}
    .form-group
      label.form-label {{'signUp.email' | translate}}
      input.form-input(type='email' name='email' ng-model='user.email' required)
      span.error(ng-show='userForm.email.$invalid && userForm.email.$touched') {{'signUp.invalidEmail' | translate}}
    .form-group
      label.form-label {{'signUp.password' | translate}}
      input.form-input(ng-minlength='8' ng-maxlength='52' type='password' name='password' ng-model='user.password' ng-pattern='/^(?=.*[0-9])(?=.*[a-zA-Z])([a-zA-Z0-9]+)$/' required)
      span.error(ng-show='userForm.password.$invalid && userForm.password.$touched') {{'signUp.invalidPassword' | translate}}
    .form-group(ng-show='userForm.password.$valid')
      label.form-label {{'signUp.confirmPassword' | translate}}
      input.form-input(ng-model='user.confirmPassword' name='confirmPassword' type='password')
      span.error(ng-show='user.password != user.confirmPassword && userForm.confirmPassword.$touched') {{'signUp.invalidConfirm' | translate}}
    button.blue-btn(type='submit' ng-click='signUpCtrl.submit()') {{'signUp.submit' | translate}}
