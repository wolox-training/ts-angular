.navbar-container
  a(ui-sref='centered.dashboard')
    img.navbar-img(src='../../../assets/wbooks_logo.svg' alt='wolox-logo')
  .nav-options
    .notifications
      img.option-img(src='../../../assets/notifications.svg' alt='notification' ng-click='$ctrl.toggeNotifications()')
      .counter(ng-if='$ctrl.notificationsCounter') {{$ctrl.notificationsCounter}}
      .notifications-container(ng-if='$ctrl.showingNotifications')
        .notification(ng-repeat='notification in $ctrl.notifications' ng-click='$ctrl.readNotification(notification.id, notification.book.id)')
          img.no-book(ng-if='!notification.book.image_url' src='../../../assets/default_book.svg' alt='notification')
          img.book(ng-if='notification.book.image_url' src='{{notification.book.image_url}}' alt='notification')
          .notification-details
            span.title {{'Navbar.notificationTitle' | translate}}
            span.book-title {{notification.book.title}}
            span.book-author {{notification.book.author}}
    img.option-img(src='../../../assets/add_book.svg' alt='add-book')
    .user-menu
      img.option-img(src='../../../assets/default_book.svg' alt='user-img' ng-click='$ctrl.toggleMenu()')
      .user-options(ng-if='$ctrl.showMenu')
        a.menu-link(ui-sref='centered.profile({ userId: $ctrl.userId })') {{'Navbar.profile' | translate}}
        a.menu-link(ng-click='$ctrl.logOut()') {{'Navbar.logout' | translate}}
